{% style %}
.testimonials_container {
  padding: 60px 0 40px;
  text-align: center;
  background: #fafbfc;
}
.testimonials_wrapper {
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 60px;
}
.testimonials {
  display: flex;
  overflow: hidden;
  position: relative;
}
.testimonials_track {
  display: flex;
  transition: transform 0.4s ease;
  width: 100%;
}
.testimonial {
  display: grid;
  grid-template-columns: 1fr 2fr;
  align-items: center;
  padding: 26px 30px 26px 28px;
  max-width: 540px;
  min-width: 540px;
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 12px 64px rgba(30,40,60,0.09);
  gap: 28px;
  margin: 0 16px;
  flex-shrink: 0;
}
.testimonial img {
  width: 132px;
  height: 132px;
  object-fit: cover;
  border-radius: 12px;
  border: 3px solid #e6ecef;
  box-shadow: 0 8px 32px rgba(40,44,53,0.10);
  background: #fff;
}
.testimonial_info {
  text-align: left;
  padding: 0;
}
.testimonial_text {
  font-size: 1.07rem;
  color: #5a5a5a;
  font-weight: 400;
  margin-bottom: 16px;
  line-height: 1.69;
}
.testimonial_name {
  font-size: 1.24rem;
  font-weight: 700;
  color: #222;
  margin-bottom: 4px;
}
.role {
  font-size: 1.02rem;
  color: #8c93a6;
}
.slider_nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  border: none;
  width: 44px;
  height: 44px;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 16px rgba(0,0,0,0.12);
  transition: all 0.3s ease;
  z-index: 10;
}
.slider_nav:hover {
  box-shadow: 0 6px 20px rgba(0,0,0,0.18);
  transform: translateY(-50%) scale(1.05);
}
.slider_nav:active {
  transform: translateY(-50%) scale(0.95);
}
.slider_nav.prev {
  left: 0;
}
.slider_nav.next {
  right: 0;
}
.slider_nav svg {
  width: 20px;
  height: 20px;
  fill: #333;
}
@media (max-width: 700px) {
  .testimonials_wrapper {
    padding: 0 50px;
  }
  .testimonial {
    min-width: 300px;
    max-width: 300px;
    grid-template-columns: 1fr;
    padding: 20px;
    margin: 0 8px;
  }
  .testimonial_info {
    text-align: center;
    margin-top: 12px;
  }
  .slider_nav {
    width: 36px;
    height: 36px;
  }
}
{% endstyle %}

<div class="testimonials_container">
  <h2>{{ section.settings.title }}</h2>
  <p class="subtitle">{{ section.settings.subtitle }}</p>
  <div class="testimonials_wrapper">
    <button class="slider_nav prev" onclick="moveSlide(-1, '{{ section.id }}')">
      <svg viewBox="0 0 24 24"><path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/></svg>
    </button>
    <div class="testimonials">
      <div class="testimonials_track" id="track-{{ section.id }}">
        {% for block in section.blocks %}
          <div class="testimonial">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url}}" alt="testimonial photo" width="132" height="132" />
            {% endif %}
            <div class="testimonial_info">
              <div class="testimonial_text">{{ block.settings.text }}</div>
              <h3 class="testimonial_name">{{ block.settings.name }}</h3>
              <span class="role">{{ block.settings.role }}</span>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <button class="slider_nav next" onclick="moveSlide(1, '{{ section.id }}')">
      <svg viewBox="0 0 24 24"><path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/></svg>
    </button>
  </div>
</div>

<script>
let currentSlide = {};

function moveSlide(direction, sectionId) {
  const track = document.getElementById('track-' + sectionId);
  const testimonials = track.querySelectorAll('.testimonial');
  const totalSlides = testimonials.length;
  
  if (!currentSlide[sectionId]) {
    currentSlide[sectionId] = 0;
  }
  
  currentSlide[sectionId] += direction;
  
  if (currentSlide[sectionId] < 0) {
    currentSlide[sectionId] = totalSlides - 1;
  } else if (currentSlide[sectionId] >= totalSlides) {
    currentSlide[sectionId] = 0;
  }
  
  const slideWidth = testimonials[0].offsetWidth + 32;
  track.style.transform = 'translateX(-' + (currentSlide[sectionId] * slideWidth) + 'px)';
}
</script>

