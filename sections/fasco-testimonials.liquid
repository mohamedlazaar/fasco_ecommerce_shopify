{% style %}
.testimonials_container {
  padding: 60px 0 40px;
  text-align: center;
  background: #fafbfc;
}
.testimonials_wrapper {
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}
.testimonials {
  position: relative;
  height: 450px;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: visible;
}
.testimonial {
  display: grid;
  grid-template-columns: 1fr 2fr;
  align-items: center;
  padding: 26px 30px 26px 28px;
  width: 540px;
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 12px 64px rgba(30,40,60,0.09);
  gap: 28px;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -270px;
  margin-top: -175px;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 0;
  transform: scale(0.85);
  pointer-events: none;
  z-index: 0;
}
.testimonial.slide-active {
  opacity: 1;
  transform: scale(1);
  z-index: 3;
  pointer-events: auto;
}
.testimonial.slide-prev {
  opacity: 0.5;
  transform: scale(0.85) translateX(-280px);
  z-index: 1;
}
.testimonial.slide-next {
  opacity: 0.5;
  transform: scale(0.85) translateX(280px);
  z-index: 1;
}
.testimonial img {
  width: 132px;
  height: 132px;
  object-fit: cover;
  border-radius: 12px;
  border: 3px solid #e6ecef;
  box-shadow: 0 8px 32px rgba(40,44,53,0.10);
  background: #fff;
}
.testimonial_info {
  text-align: left;
  padding: 0;
}
.testimonial_text {
  font-size: 1.07rem;
  color: #5a5a5a;
  font-weight: 400;
  margin-bottom: 16px;
  line-height: 1.69;
}
.testimonial_name {
  font-size: 1.24rem;
  font-weight: 700;
  color: #222;
  margin-bottom: 4px;
}
.role {
  font-size: 1.02rem;
  color: #8c93a6;
}
.slider_nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  border: none;
  width: 44px;
  height: 44px;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 16px rgba(0,0,0,0.12);
  transition: all 0.3s ease;
  z-index: 10;
}
.slider_nav:hover {
  box-shadow: 0 6px 20px rgba(0,0,0,0.18);
  transform: translateY(-50%) scale(1.05);
}
.slider_nav:active {
  transform: translateY(-50%) scale(0.95);
}
.slider_nav.prev {
  left: 20px;
}
.slider_nav.next {
  right: 20px;
}
.slider_nav svg {
  width: 20px;
  height: 20px;
  fill: #333;
}
.button_conta{
    width:200px;
    height: auto;
    margin: 0 auto
}
@media (max-width: 900px) {
  .testimonials {
    height: 400px;
  }
  .testimonial {
    width: 420px;
    margin-left: -210px;
  }
  .testimonial.slide-prev {
    transform: scale(0.8) translateX(-200px);
  }
  .testimonial.slide-next {
    transform: scale(0.8) translateX(200px);
  }
}
@media (max-width: 700px) {
  .testimonials {
    height: 450px;
  }
  .testimonial {
    width: 300px;
    margin-left: -150px;
    grid-template-columns: 1fr;
    padding: 20px;
  }
  .testimonial_info {
    text-align: center;
    margin-top: 12px;
  }
  .testimonial.slide-prev {
    transform: scale(0.75) translateX(-140px);
    opacity: 0.3;
  }
  .testimonial.slide-next {
    transform: scale(0.75) translateX(140px);
    opacity: 0.3;
  }
  .slider_nav {
    width: 36px;
    height: 36px;
  }
  .slider_nav.prev {
    left: 10px;
  }
  .slider_nav.next {
    right: 10px;
  }
}
{% endstyle %}

<div class="testimonials_container">
  <h2>{{ section.settings.title }}</h2>
  <p class="subtitle">{{ section.settings.subtitle }}</p>
  <div class="testimonials_wrapper">

    <div class="testimonials" data-testimonials-id="{{ section.id }}">
      {% for block in section.blocks %}
        <div class="testimonial">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url}}" alt="testimonial photo" width="132" height="132" />
          {% endif %}
          <div class="testimonial_info">
            <div class="testimonial_text">{{ block.settings.text }}</div>
            <h3 class="testimonial_name">{{ block.settings.name }}</h3>
            <span class="role">{{ block.settings.role }}</span>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="button_conta">
        <button class="slider_nav prev" data-slider-id="{{ section.id }}" data-direction="-1">
        <svg viewBox="0 0 24 24"><path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/></svg>
        </button>
        <button class="slider_nav next" data-slider-id="{{ section.id }}" data-direction="1">
        <svg viewBox="0 0 24 24"><path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/></svg>
        </button>        
    </div>

  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sliderStates = {};
  
  function initSlider(sectionId) {
    const container = document.querySelector('[data-testimonials-id="' + sectionId + '"]');
    if (!container) return;
    
    const testimonials = container.querySelectorAll('.testimonial');
    if (testimonials.length === 0) return;
    
    sliderStates[sectionId] = { current: 0, total: testimonials.length };
    
    function updateSlides() {
      const state = sliderStates[sectionId];
      
      testimonials.forEach(function(testimonial, index) {
        testimonial.classList.remove('slide-active', 'slide-prev', 'slide-next');
        
        if (index === state.current) {
          testimonial.classList.add('slide-active');
        } else if (index === (state.current - 1 + state.total) % state.total) {
          testimonial.classList.add('slide-prev');
        } else if (index === (state.current + 1) % state.total) {
          testimonial.classList.add('slide-next');
        }
      });
    }
    
    updateSlides();
    
    const buttons = document.querySelectorAll('[data-slider-id="' + sectionId + '"]');
    buttons.forEach(function(button) {
      button.addEventListener('click', function() {
        const direction = parseInt(this.getAttribute('data-direction'));
        const state = sliderStates[sectionId];
        state.current = (state.current + direction + state.total) % state.total;
        updateSlides();
      });
    });
  }
  
  initSlider('{{ section.id }}');
});
</script>

