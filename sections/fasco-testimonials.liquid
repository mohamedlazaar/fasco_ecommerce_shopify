{% style %}
.testimonials_container {
  padding: 60px 0 40px;
  text-align: center;
  background: #fafbfc;
}
.testimonials {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 32px;
}
.testimonial {
  display: grid;
  grid-template-columns: 1fr 2fr;
  align-items: center;
  padding: 26px 30px 26px 28px;
  max-width: 540px;
  min-width: 340px;
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 12px 64px rgba(30,40,60,0.09);
  gap: 28px;
  margin: 0 auto;
  position: relative;
}
.testimonial img {
  width: 132px;
  height: 132px;
  object-fit: cover;
  border-radius: 12px;
  border: 3px solid #e6ecef;
  box-shadow: 0 8px 32px rgba(40,44,53,0.10);
  background: #fff;
}
.testimonial_info {
  text-align: left;
  padding: 0;
}
.testimonial_text {
  font-size: 1.07rem;
  color: #5a5a5a;
  font-weight: 400;
  margin-bottom: 16px;
  line-height: 1.69;
}
.testimonial_name {
  font-size: 1.24rem;
  font-weight: 700;
  color: #222;
  margin-bottom: 4px;
}
.role {
  font-size: 1.02rem;
  color: #8c93a6;
}
@media (max-width: 700px) {
  .testimonials {
    flex-direction: column;
    gap: 22px;
  }
  .testimonial {
    min-width: 220px;
    grid-template-columns: 1fr;
    padding: 20px;
  }
  .testimonial_info {
    text-align: center;
    margin-top: 12px;
  }
}
{% endstyle %}

<div class="testimonials_container">
  <h2>{{ section.settings.title }}</h2>
  <p class="subtitle">{{ section.settings.subtitle }}</p>
  <div class="testimonials">
    {% for block in section.blocks %}
      <div class="testimonial">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | image_url}}" alt="testimonial photo" width="100" height="100" />
        {% endif %}
        <div class="testimonial_info">
          <div class="testimonial_text">{{ block.settings.text }}</div>
          <h3 class="testimonial_name">{{ block.settings.name }}</h3>
          <span class="role">{{ block.settings.role }}</span>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Fasco Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Testimonials"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "See what our travelers say about us."
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Photo"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Testimonial Text",
          "default": "You won't regret it. I would like to personally thank you for your outstanding product. Absolutely wonderful!"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "James K."
        },
        {
          "type": "text",
          "id": "role",
          "label": "Role / Occupation",
          "default": "Traveler"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Fasco Testimonials",
      "blocks": [
        {
          "type": "testimonial",
          "settings": {
            "image": "",
            "text": "You won't regret it. I would like to personally thank you for your outstanding product. Absolutely wonderful!",
            "name": "James K.",
            "role": "Traveler"
          }
        }
      ]
    }
  ]
}
{% endschema %}
