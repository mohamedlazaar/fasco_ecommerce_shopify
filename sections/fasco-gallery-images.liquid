{% style %}
    .instagram-follow-section {
      padding: 60px 0 40px 0;
      background: #fff;
      text-align: center;
    }
    .instagram-follow-title {
      font-size: 2.8rem;
      font-weight: 700;
      color: #232323;
      margin-bottom: 13px;
      letter-spacing: 1px;
    }
    .instagram-follow-subtitle {
      font-size: 1.14rem;
      color: #616161;
      font-weight: 400;
      margin-bottom: 35px;
      max-width: 610px;
      margin-left: auto;
      margin-right: auto;
    }
    .instagram-gallery {
  display: flex;
  gap: 28px;
  justify-content: center;
  align-items: end;
}
    .instagram-photo-card img {
    width: 100%;
    height: auto;
    border-radius: 13px;
    display: block;
    /* no fixed height, so images can be variable! */
    }

    .instagram-photo-card {
      background: #fff;
      border-radius: 14px;
      overflow: hidden;
      min-width: 210px;
      max-width: 240px;
      width: 18vw;
      height: 350px;
      box-shadow: 0 8px 32px rgba(40,44,53,0.09);
      display: flex;
      align-items: stretch;
      justify-content: center;
    }

    @media (max-width: 900px) {
      .instagram-photo-card {
        min-width: 150px;
        max-width: 170px;
        height: 220px;
      }
      .instagram-gallery {
        gap: 10px;
      }
    }
    {% endstyle %}
    
    <section class="instagram-follow-section">
      <div class="instagram-follow-title">
        {{ section.settings.title }}
      </div>
      <div class="instagram-follow-subtitle">
        {{ section.settings.subtitle }}
      </div>
      <div class="instagram-gallery">
        {% for block in section.blocks %}
          {% if block.type == 'photo' %}
            <div class="instagram-photo-card">
              <img src="{{ block.settings.image | image_url }}" alt="Instagram Gallery Photo" />
            </div>
          {% endif %}
        {% endfor %}
      </div>
      
    </section>
    
    {% schema %}
    {
      "name": "Images Gallery",
      "tag": "section",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Section Title",
          "default": "Follow Us On Instagram"
        },
        {
          "type": "textarea",
          "id": "subtitle",
          "label": "Section Subtitle",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Scelerisque duis ultrices sollicitudin aliquam sem. Scelerisque duis ultrices sollicitudin."
        }
      ],
      "blocks": [
        {
          "type": "photo",
          "name": "Instagram Photo",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Gallery Image"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Images Gallery",
          "settings": {
            "title": "Follow Us On Instagram",
            "subtitle": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Scelerisque duis ultrices sollicitudin aliquam sem. Scelerisque duis ultrices sollicitudin."
          },
          "blocks": []
        }
      ]
    }
    {% endschema %}
    